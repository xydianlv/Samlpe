        <activity
            android:name=".test.location.ActivityLocation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".test.slide.ActivitySlide"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
