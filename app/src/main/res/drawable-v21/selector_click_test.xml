<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item
      android:id="@+id/select"
      android:state_selected="true"
      android:drawable="@drawable/vector_select_true"
      />

  <item
      android:id="@+id/normal"
      android:state_selected="false"
      android:drawable="@drawable/vector_select_false"
      />

  <transition
      android:fromId="@id/normal"
      android:toId="@id/select"
      android:drawable="@drawable/vector_anim_false_to_true"
      />

  <transition
      android:fromId="@id/select"
      android:toId="@id/normal"
      android:drawable="@drawable/vector_anim_true_to_false"
      />

</animated-selector>