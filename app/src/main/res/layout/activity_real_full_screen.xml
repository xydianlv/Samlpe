<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e27386"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/color_white"
        android:textSize="22.0dp"
        tools:ignore="SpUsage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/full_screen_click_a"
            android:layout_height="wrap_content"
            android:layout_width="0.0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_16"
            android:textColor="@color/ct_5"
            android:paddingTop="@dimen/padding_14"
            android:paddingBottom="@dimen/padding_14"
            android:text="@string/full_screen_light"
            android:background="@drawable/bg_round_grey_green_10"
            />

        <TextView
            android:id="@+id/full_screen_click_b"
            android:layout_height="wrap_content"
            android:layout_width="0.0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_16"
            android:textColor="@color/ct_5"
            android:paddingTop="@dimen/padding_14"
            android:paddingBottom="@dimen/padding_14"
            android:text="@string/full_screen_night"
            android:background="@drawable/bg_round_grey_green_10"
            />

    </LinearLayout>

</FrameLayout>