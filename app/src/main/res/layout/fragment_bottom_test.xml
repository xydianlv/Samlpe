<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/fragment_bottom_root"
    android:background="@drawable/dialog_comment_detail"
    >

  <ImageView
      android:id="@+id/fragment_bottom_quit"
      android:layout_width="32.0dp"
      android:layout_height="32.0dp"
      android:src="@mipmap/ic_launcher"
      android:contentDescription="@string/image"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/test"
      android:textColor="@color/color_242529"
      android:textSize="18.0dp"
      android:layout_marginTop="12.0dp"
      />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/fragment_bottom_recycler"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

</LinearLayout>