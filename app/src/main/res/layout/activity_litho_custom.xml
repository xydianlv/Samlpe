<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:fitsSystemWindows="true"
    >

  <include
      layout="@layout/common_toolbar"
      />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <com.example.wyyu.gitsamlpe.test.litho.custom.widget.LayoutHead
          android:id="@+id/custom_head_a"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

      <com.example.wyyu.gitsamlpe.test.litho.custom.widget.LayoutContent
          android:id="@+id/custom_content_a"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

      <com.example.wyyu.gitsamlpe.test.litho.custom.widget.LayoutFoot
          android:id="@+id/custom_foot_a"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

      <com.facebook.litho.LithoView
          android:id="@+id/custom_litho"
          android:layout_width="match_parent"
          android:layout_height="120.0dp"
          />

    </LinearLayout>

  </ScrollView>

</LinearLayout>