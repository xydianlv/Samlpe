<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <com.example.wyyu.gitsamlpe.test.bigimage.weight.MultiImageView
        android:id="@+id/multi_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="0.0dp"
        android:layout_height="10.0dp" />

    <ImageView
        android:id="@+id/multi_fun_image"
        android:layout_width="120.0dp"
        android:layout_height="120.0dp"
        android:contentDescription="@string/image"
        android:src="@mipmap/image_test_1" />

    <View
        android:layout_width="0.0dp"
        android:layout_height="10.0dp" />

    <SeekBar
        android:id="@+id/multi_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="12.0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80.0dp"
        android:layout_marginTop="28.0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_14">

        <ImageView
            android:layout_width="12.0dp"
            android:layout_height="12.0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_close_m_o" />

        <ImageView
            android:layout_width="24.0dp"
            android:layout_height="24.0dp"
            android:layout_marginStart="@dimen/padding_14"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_close_m_o" />

        <ImageView
            android:layout_width="48.0dp"
            android:layout_height="48.0dp"
            android:layout_marginStart="@dimen/padding_14"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_close_m_o" />

        <ImageView
            android:layout_width="60.0dp"
            android:layout_height="60.0dp"
            android:layout_marginStart="@dimen/padding_14"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_close_m_o" />

        <ImageView
            android:layout_width="80.0dp"
            android:layout_height="80.0dp"
            android:layout_marginStart="@dimen/padding_14"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_close_m_o" />

    </LinearLayout>

</LinearLayout>