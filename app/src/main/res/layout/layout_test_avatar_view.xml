<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="60.0dp"
    android:layout_width="60.0dp"
    >

  <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/avatar_image"
      android:layout_width="48.0dp"
      android:layout_height="48.0dp"
      android:layout_gravity="center"
      app:roundAsCircle="true"
      app:placeholderImage="@mipmap/image_test_1"
      />

  <View
      android:layout_width="50.0dp"
      android:layout_height="50.0dp"
      android:background="@drawable/bg_ripple_static"
      android:layout_gravity="center"
      />

  <View
      android:id="@+id/avatar_anim"
      android:layout_width="50.0dp"
      android:layout_height="50.0dp"
      android:background="@drawable/bg_ripple_anim"
      android:layout_gravity="center"
      />

</FrameLayout>