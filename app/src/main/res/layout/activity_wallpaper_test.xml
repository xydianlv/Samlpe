<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

  <LinearLayout
      android:id="@+id/wallpaper_test_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      android:background="@color/color_84919b"
      >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/image_test_1"
        android:contentDescription="@string/image"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/image_test_2"
        android:contentDescription="@string/image"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/image_test_3"
        android:contentDescription="@string/image"
        />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      >

    <TextView
        android:id="@+id/wallpaper_btn_lock"
        android:layout_height="wrap_content"
        android:layout_width="0.0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/text_16"
        android:textColor="@color/ct_5"
        android:paddingTop="@dimen/padding_14"
        android:paddingBottom="@dimen/padding_14"
        android:text="@string/wall_paper_lock"
        android:background="@drawable/bg_round_grey_green_10"
        />

    <TextView
        android:id="@+id/wallpaper_btn_home"
        android:layout_height="wrap_content"
        android:layout_width="0.0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/text_16"
        android:textColor="@color/ct_5"
        android:paddingTop="@dimen/padding_14"
        android:paddingBottom="@dimen/padding_14"
        android:text="@string/wall_paper_home"
        android:background="@drawable/bg_round_grey_green_10"
        />

  </LinearLayout>

</FrameLayout>